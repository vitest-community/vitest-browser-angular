{
  "name": "vitest-browser-angular",
  "version": "0.0.4",
  "description": "Render Angular components in VItest Browser Mode",
  "author": "Shai Reznik (HiRez.io)",
  "license": "MIT",
  "homepage": "https://github.com/hirezio/vitest-browser-angular#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirezio/vitest-browser-angular.git"
  },
  "bugs": {
    "url": "https://github.com/hirezio/vitest-browser-angular/issues"
  },
  "keywords": [
    "angular",
    "vitest",
    "browser",
    "testing"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./setup-zones": {
      "types": "./dist/setup-zones.d.mts",
      "default": "./dist/setup-zones.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "*.d.ts",
    "*.mjs",
    "dist"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "change": "changeset",
    "dev": "tsdown --watch --sourcemap",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "fmt.staged": "pretty-quick --staged",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "changeset publish",
    "release.pkg-pr-new": "pnpm dlx pkg-pr-new publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "@analogjs/vitest-angular": ">1.20.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@vitest/browser": "^2.1.0 || ^3.0.0 || ^4.0.0-0",
    "vitest": "^2.1.0 || ^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^1.20.2",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@changesets/cli": "^2.29.6",
    "@changesets/get-github-info": "^0.6.0",
    "@changesets/types": "^6.1.0",
    "@eslint/js": "^9.35.0",
    "@vitest/browser": "^3.2.0",
    "@vitest/browser-playwright": "^4.0.0",
    "bumpp": "^9.4.2",
    "changelogithub": "^0.13.9",
    "dotenv": "^17.2.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "playwright": "^1.46.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.16.2",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.42.0",
    "vitest": "^4.0.0",
    "zone.js": "^0.15.1",
    "zx": "^8.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm fmt.staged && pnpm lint"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  }
}
